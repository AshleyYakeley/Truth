{
  "version": "2.0.0",
  "presentation": {
    "echo": true,
    "reveal": "always",
    "focus": false,
    "panel": "shared",
    "showReuseMessage": false,
    "clear": true
  },
  "tasks": [
    {
      "group": "build",
      "label": "Format",
      "type": "shell",
      "command": "cd ${workspaceRoot} && make format && echo OK",
      "problemMatcher": [
        {
          "owner": "hindent",
          "fileLocation": "relative",
          "pattern": [
            {
              "regexp": "^hindent: (.*):(\\d+):(\\d+):\\s+(.*)",
              "file": 1,
              "line": 2,
              "column": 3,
              "message": 4
            }
          ]
        }
      ]
    },
    {
      "group": "build",
      "label": "Full Build",
      "type": "shell",
      "command": "cd ${workspaceRoot} && make haddock=1 test=1 bench=1 full && echo OK",
      "problemMatcher": [
        {
          "owner": "stack",
          "fileLocation": "absolute",
          "pattern": [
            {
              "regexp": "> (.*):(\\d+):(\\d+):\\s+(warning|error):",
              "file": 1,
              "line": 2,
              "column": 3,
              "severity": 4
            },
            {
              "regexp": "> \\s+(.*)$",
              "message": 1
            }
          ]
        },
        {
          "owner": "hindent",
          "fileLocation": "relative",
          "pattern": [
            {
              "regexp": "^hindent: (.*):(\\d+):(\\d+):\\s+(.*)",
              "file": 1,
              "line": 2,
              "column": 3,
              "message": 4
            }
          ]
        }
      ]
    },
    {
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "label": "Quick Build",
      "type": "shell",
      "command": "cd ${workspaceRoot} && make nodocker=1 single=1 exe && echo OK",
      "problemMatcher": [
        {
          "owner": "stack",
          "fileLocation": "absolute",
          "pattern": [
            {
              "regexp": "> (.*):(\\d+):(\\d+):\\s+(warning|error):",
              "file": 1,
              "line": 2,
              "column": 3,
              "severity": 4
            },
            {
              "regexp": "> \\s+(.*)$",
              "message": 1
            }
          ]
        }
      ]
    },
    {
      "group": "test",
      "label": "Format & Quick Test",
      "type": "shell",
      "command": "cd ${workspaceRoot} && make nodocker=1 test=1 format exe && echo OK",
      "problemMatcher": [
        {
          "owner": "stack",
          "fileLocation": "absolute",
          "pattern": [
            {
              "regexp": "> (.*):(\\d+):(\\d+):\\s+(warning|error):",
              "file": 1,
              "line": 2,
              "column": 3,
              "severity": 4
            },
            {
              "regexp": "> \\s+(.*)$",
              "message": 1
            }
          ]
        }
      ]
    }
  ]
}
