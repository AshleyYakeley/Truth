#!/usr/bin/pinafore
import "pinafore-gnome" in
with GTK. in
run.GTK $ fn gtk =>
let

messageBracket: Text -> Action a -> Action a
= fn t, ma => do
    outputLn.Env $ t <>.Text " [";
    a <- ma;
    outputLn.Env $ t <>.Text " ]";
    pure.Action a;
    end;

in messageBracket "main" $
do
    w <- open.Window gtk (600,800) {"Window"} blank.Element;
    async.Task $
    messageBracket "thread" $
    do
        messageBracket "thread: lock: outside" $
        lock.GTK.Debug gtk $
        messageBracket "thread: lock: inside" $
        sleep $ Seconds 0.3;
        messageBracket "thread: closeWindow" $ close.Window w;
    end;
    sleep $ Seconds 0.1;
end
