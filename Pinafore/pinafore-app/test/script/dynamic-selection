#!/usr/bin/pinafore

let

opentype Named;
name = property @Named @Text !"identify.name";
byName: FiniteSetModel {+a,+Named} -> WholeModel +[(a,Text)];
byName ref = finiteSetModelList (mapOrder fst $ orderOn name alphabetical) $ (identity !** name) !$$ ref;

dynamictype Person = !"type.person";
testpt = dynamicEntity @Person !"testpt";

inform: Text -> Maybe Entity -> Action Unit;
inform t mv = Debug.message $ t <> ": " <> case mv of
    Just v -> "changed: " <> entityAnchor v;
    Nothing -> "deleted";
    end;

debugWindow: GTK.Window -> Action Unit;
debugWindow window = do
    t <- Debug.GTK.windowInfo window;
    Debug.message t;
    end;

debugThing: Text -> Action a -> Action a;
debugThing t action = do
    Debug.message $ t <> ": [";
    a <- action;
    Debug.message $ t <> ": ]";
    return a;
    end;

in debugThing "SCRIPT" $ do
    selection <- newMemWholeModel;
    subscribeWholeModel selection $ \me -> debugThing "UPDATE" $ inform "sel" me;
    selection := testpt;
    window <- fixAction $ \w -> GTK.openWindow (300,400) {"Test"} $
        GTK.dynamic $ coMapWholeModel (\e -> GTK.run $ debugThing "DYNAMIC" $ do
            # debugWindow w;
            inform "dynamic" $ Just e;
            return $ GTK.vertical [(True,GTK.label {"Set Text"})];
            end) selection
        ;
    debugWindow window;
    selection := testpt;
    debugWindow window;
    GTK.openWindow (300,400) {"Check"} $ GTK.button {"Check"} $ {debugThing "CHECK" $ do
        debugWindow window;
        selection := testpt;
        debugWindow window;
        end};
    end
