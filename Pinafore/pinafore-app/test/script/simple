#!/usr/bin/pinafore
let

# Ontology
# Define a type of entity for people
opentype Person;

# Properties of Person
name = property @Person @Text !"example:name";

# One particular Person
me = openEntity @Person !"example:me";

# GTK
ui_person : Person -> GTK.Element;
ui_person p = GTK.textEntry $ name !$ {p};

window_person : Person -> Action GTK.Window;
window_person p = GTK.openWindow (300,400) {"Name"} {[]} (ui_person p);

in do
    window_person me;
    window_person me;
    end
