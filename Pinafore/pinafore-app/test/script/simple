#!/usr/bin/pinafore
Env.openDefaultStore >>= fn store =>
let
import Storage;

# Ontology
# Define a type of entity for people
opentype Person;

# Properties of Person
name = property @Person @Text !"example:name" store;

# One particular Person
me = openEntity @Person !"example:me";

# GTK
ui_person : Person -> GTK.Element
= fn p => GTK.textEntry $ name !$ {p};

window_person : GTK.Context -> Person -> Action GTK.Window
= fns gtk p => GTK.openWindow gtk (300,400) {"Name"} (ui_person p);

in GTK.run $ fn gtk => do
    window_person gtk me;
    window_person gtk me;
    end
