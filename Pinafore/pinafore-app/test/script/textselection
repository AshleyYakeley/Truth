#!/usr/bin/pinafore
let
import "pinafore-gnome";
in run.GTK $ \gtk => do
    tref1 <- newMemWholeModel;
    tref1 := "111";
    tref2 <- newMemWholeModel;
    tref2 := "222";
    tref3 <- newMemWholeModel;
    tref3 := "333";
    sel <- newMemWholeModel;
    openWindow.GTK gtk (400,500) {"Text Selection"} $ styleSheet.GTK {"* {padding: 2pt;}"} $ vertical.GTK
    [
        textArea.GTK tref1 sel,
        textArea.GTK tref2 sel,
        textArea.GTK tref3 sel,
        dynamic.GTK {exec.GTK $ mapAction (\tref => textArea.GTK tref unknown) %sel}
    ];
    end
