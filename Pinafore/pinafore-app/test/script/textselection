#!/usr/bin/pinafore
let
import GTK();
in GTK.run $ \gtk => do
    tref1 <- newMemWhole;
    tref1 := "111";
    tref2 <- newMemWhole;
    tref2 := "222";
    tref3 <- newMemWhole;
    tref3 := "333";
    sel <- newMemWhole;
    GTK.openWindow gtk (400,500) {"Text Selection"} {[]} $ GTK.styleSheet {"* {padding: 2pt;}"} $ GTK.vertical
    [
        GTK.textArea tref1 sel,
        GTK.textArea tref2 sel,
        GTK.textArea tref3 sel,
        GTK.dynamic {GTK.exec $ mapAction (\tref => GTK.textArea tref unknown) %sel}
    ];
    end
