#!/usr/bin/pinafore

let

years: FiniteSetRef Integer;
years = property @Integer @Unit !"FTSJ.years" !@ {()};

yearTheme: Integer ~> Text;
yearTheme = property @Integer @Text !"FTSJ.yearTheme";

import GTK;
import UIStuff.Selection;

frontCoverPane: Pane;
frontCoverPane = pane "Cover" $ \_ => styleSheet {"* {font-size: 32pt;}"} $ label {"FAKE\nTHEME\nSYSTEM\nJOURNAL"};

getThemesPane: Action Pane;
getThemesPane = return $ pane "Themes" $ \_ => blank;

daysPane: Pane;
daysPane = pane "Days" $ \_ => blank;

createMainPane: Action Pane;
createMainPane = do
    themesPane <- getThemesPane;
    notebookPane {"Fake Theme System Journal"} [frontCoverPane,themesPane,daysPane];
    end;

in run $ \gtk => do
    mainPane <- createMainPane;
    paneWindow gtk mainPane;
    end
