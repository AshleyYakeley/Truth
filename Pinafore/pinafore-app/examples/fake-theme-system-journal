#!/usr/bin/pinafore

let import UIStuff.Selection in runUIStuff $ fns store uisc =>
let
import Storage;

years: FiniteSetModel Integer
= property @Integer @Unit !"FTSJ.years" store !@ {()};

yearTheme: Integer ~> Text
= property @Integer @Text !"FTSJ.yearTheme" store;

import GTK;

frontCoverPane: Pane
= pane "Cover" $ styleSheet {"* {font-size: 32pt;}"} $ label {"FAKE\nTHEME\nSYSTEM\nJOURNAL"};

getThemesPane: Action Pane
= return $ pane "Themes" $ blank;

daysPane: Pane
= pane "Days" $ blank;

createMainPane: Action Pane
= do
    themesPane <- getThemesPane;
    notebookPane {"Fake Theme System Journal"} [frontCoverPane,themesPane,daysPane];
    end;

in do
    mainPane <- createMainPane;
    paneWindow uisc mainPane;
    end
