let

# Ontology
# Define a type of entity for people
opentype Person;

# Properties of Person
name = property @Person @Text !498260df-6a8a-44f0-b285-68a63565a33b;

# One particular Person
me = entity @Person !4527c8ac-580d-443c-8496-2b5a93021f98;

# UI
ui_person :: Person -> UI None;
ui_person p = ui_textentry $ name !$ {p};

window_person :: Person -> Action Window;
window_person p = openwindow {"Name"} {[]} (ui_person p);

in do
    window_person me;
    window_person me;
    return ();
    end
