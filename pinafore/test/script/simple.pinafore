let

# Ontology
# Define a type of entity for people
opentype Person;

# Properties of Person
name = property @Person @Text !"example:name";

# One particular Person
me = entity @Person !"example:me";

# UI
ui_person :: Person -> UI;
ui_person p = uiTextEntry $ name !$ {p};

window_person :: Person -> Action Window;
window_person p = openWindow {"Name"} {[]} (ui_person p);

in do
    window_person me;
    window_person me;
    return ();
    end
